<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="pub.carzy.auto_script.R" />

        <import type="pub.carzy.auto_script.utils.StringUtils" />

        <import type="pub.carzy.auto_script.db.entity.ScriptActionEntity" />

        <import type="android.view.KeyEvent" />

        <import type="pub.carzy.auto_script.adapter.Converter" />

        <variable
            name="entity"
            type="pub.carzy.auto_script.db.entity.ScriptEntity" />

        <variable
            name="edit"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{entity==null?View.GONE:View.VISIBLE}">

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_id))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.id)}" />
                </LinearLayout>
                <!--名称-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_name))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{entity.name}"
                            app:slot="viewer" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:inputType="text"
                            android:text="@={entity.name}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>
                <!--延迟开始-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_delay_start))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Converter.longToString(entity.delayStart)}"
                            app:slot="viewer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="viewer" />

                        <EditText
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={Converter.longToString(entity.delayStart)}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="editor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>
                <!--延迟结束-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_delay_end))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{Converter.longToString(entity.delayEnd)}"
                            app:slot="viewer" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="viewer" />
                        <EditText
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={Converter.longToString(entity.delayEnd)}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="editor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>

                </LinearLayout>
                <!--时长-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_duration))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.totalDuration)}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/unit_ms" />
                </LinearLayout>
                <!--步骤-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_steps))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.actionCount)}" />
                </LinearLayout>
                <!--描述-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_description))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{entity.description}"
                            app:slot="viewer" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:text="@={entity.description}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>
                <!--创建时间-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_create_time))}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.formatTime(entity.createTime)}" />
                </LinearLayout>
                <!--修改时间-->
                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_update_time))}" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.formatTime(entity.updateTime)}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2>
</layout>