<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="pub.carzy.auto_script.model.ScriptVoEntityModel" />

        <import type="pub.carzy.auto_script.utils.statics.StaticValues" />

        <variable
            name="model"
            type="ScriptVoEntityModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="步骤"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/actionBarChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{`详细`+(model.detailIndex==StaticValues.DEFAULT_INDEX?``:`(`+model.detailIndex+`)`)}"
                android:textAlignment="center" />

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/pointBarChart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>
</layout>