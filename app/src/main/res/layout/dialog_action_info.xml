<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="pub.carzy.auto_script.R" />

        <import type="pub.carzy.auto_script.utils.StringUtils" />

        <import type="pub.carzy.auto_script.db.entity.ScriptActionEntity" />

        <import type="android.view.KeyEvent" />

        <import type="pub.carzy.auto_script.adapter.Converter" />

        <variable
            name="entity"
            type="pub.carzy.auto_script.db.entity.ScriptActionEntity" />

        <variable
            name="edit"
            type="androidx.databinding.ObservableBoolean" />
    </data>

    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{entity==null?View.GONE:View.VISIBLE}">

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_id))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.id)}" />
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_script_id))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.scriptId)}" />
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">
                    <!--按下时间-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_down_time))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{StringUtils.format(entity.startTime)}"
                            app:slot="viewer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="viewer" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={Converter.longToString(entity.startTime)}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="editor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_duration))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit &amp;&amp; entity.type==ScriptActionEntity.KEY_EVENT}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{StringUtils.format(entity.duration)}"
                            app:slot="viewer" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="viewer" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:autofillHints=""
                            android:inputType="number"
                            android:text="@={Converter.longToString(entity.duration)}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_ms"
                            app:slot="editor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.GESTURE?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_count))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.pointCount)}" />
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_type))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ScriptActionEntity.getTypeName(entity.type)}" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.GESTURE?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_index))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.index)}" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.KEY_EVENT?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_code))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{StringUtils.format(entity.code==null?null:KeyEvent.keyCodeToString(entity.code))}"
                            app:slot="viewer" />

                        <AutoCompleteTextView
                            android:id="@+id/dropdown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:completionThreshold="1"
                            android:inputType="none"
                            android:text="@{StringUtils.format(entity.code==null?null:KeyEvent.keyCodeToString(entity.code))}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>

                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.label_description))}" />

                    <pub.carzy.auto_script.ui_components.components.FormField
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:edit="@{edit}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{entity.description}"
                            app:slot="viewer" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:gravity="top"
                            android:inputType="textMultiLine"
                            android:minLines="3"
                            android:text="@={entity.description}"
                            app:slot="editor"
                            tools:ignore="LabelFor" />
                    </pub.carzy.auto_script.ui_components.components.FormField>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2>
</layout>