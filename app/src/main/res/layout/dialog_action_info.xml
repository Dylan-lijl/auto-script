<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <import type="pub.carzy.auto_script.R" />

        <import type="pub.carzy.auto_script.utils.StringUtils" />

        <import type="pub.carzy.auto_script.db.entity.ScriptActionEntity" />

        <import type="android.view.KeyEvent" />

        <variable
            name="entity"
            type="pub.carzy.auto_script.db.entity.ScriptActionEntity" />
    </data>

    <com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="@{entity==null?View.GONE:View.VISIBLE}">

                <LinearLayout style="@style/FormVerticalItemStyle">
                    <!--按下时间-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_down_time))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.startTime)+context.getString(R.string.unit_ms)}" />
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_duration))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.duration)+context.getString(R.string.unit_ms)}" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.GESTURE?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_count))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.pointCount)}" />
                </LinearLayout>

                <LinearLayout style="@style/FormVerticalItemStyle">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_type))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{ScriptActionEntity.getTypeName(entity.type)}" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.GESTURE?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_index))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.index)}" />
                </LinearLayout>

                <LinearLayout
                    style="@style/FormVerticalItemStyle"
                    android:visibility="@{entity.type==ScriptActionEntity.KEY_EVENT?View.VISIBLE:View.GONE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{context.getString(R.string.label_format,context.getString(R.string.action_label_code))}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{StringUtils.format(entity.code==null?null:KeyEvent.keyCodeToString(entity.code))}" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.qmuiteam.qmui.widget.QMUIWindowInsetLayout2>
</layout>