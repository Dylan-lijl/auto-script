<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="pub.carzy.auto_script.model.MacroListModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnRecord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/button_bg"
                android:contentDescription="@string/help_script_list_record"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/record"
                app:tint="@color/danger" />

            <pub.carzy.auto_script.ui.ExtImageButton
                android:id="@+id/btnRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/button_bg"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/start"
                android:tint="@color/safe"
                android:visibility="gone"
                app:tooltipText="@string/help_script_list_run" />

            <pub.carzy.auto_script.ui.ExtImageButton
                android:id="@+id/btnPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_bg"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/pause"
                android:tint="@color/danger"
                android:visibility="gone"
                app:tooltipText="@string/help_script_list_pause" />

            <pub.carzy.auto_script.ui.ExtImageButton
                android:id="@+id/btnStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/button_bg"
                android:padding="2dp"
                android:scaleType="centerInside"
                android:src="@drawable/stop"
                android:tint="@color/danger"
                android:visibility="gone"
                app:tooltipText="@string/help_script_list_stop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--表格-->
            <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
                android:id="@+id/swipeRefresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                cube_ptr:ptr_duration_to_close="300"
                cube_ptr:ptr_duration_to_close_header="2000"
                cube_ptr:ptr_keep_header_when_refresh="true"
                cube_ptr:ptr_pull_to_fresh="false"
                cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
                cube_ptr:ptr_resistance="1.7">

                <include
                    android:id="@+id/empty"
                    layout="@layout/empty"
                    android:visibility="@{model.data.empty ? View.VISIBLE : View.GONE}" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{model.data.empty? View.GONE : View.VISIBLE}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            </in.srain.cube.views.ptr.PtrFrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
