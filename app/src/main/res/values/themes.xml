<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme_Auto_Script" parent="QMUI">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_200</item>
        <!-- Customize your theme here. -->
        <!-- 去除action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--top bar-->
        <item name="qmui_skin_support_topbar_bg">@color/teal_200</item>
        <item name="qmui_topbar_title_color">@color/white</item>
        <item name="qmui_topbar_title_bold">true</item>
        <item name="qmui_skin_support_topbar_title_color">@color/white</item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/white</item>
        <!-- 按钮 -->
        <item name="QMUIButtonStyle">@style/Widget.AutoScript.Button</item>
    </style>

    <style name="Widget.AutoScript.Button" parent="QMUI.RoundButton">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="qmui_borderColor">@color/transparent</item>
    </style>
</resources>